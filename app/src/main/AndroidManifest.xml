<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.victor.zetattendance" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PeriodListActivity"
            android:label="@string/title_period_list" >
        </activity>
        <activity
            android:name=".PeriodDetailActivity"
            android:label="@string/title_period_detail"
            android:parentActivityName=".PeriodListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.victor.zetattendance.PeriodListActivity" />
        </activity>
        <activity
            android:name=".StudentDetailActivity"
            android:label="@string/title_activity_student_detail" >
        </activity>
        <activity
            android:name=".AttendanceResults"
            android:label="@string/title_activity_attendance_results" >
        </activity>
        <activity
            android:name=".AttendanceResultsActivity"
            android:label="@string/title_activity_attendance_results" >
        </activity>
    </application>

</manifest>
